@model PCHUBStore.Areas.Administration.Models.IndexPageViewModels.IndexItemsCategoryViewModel

@{

    ViewData["Title"] = "Create Items Category ";

}

<div class="container bg-warning">
    <div class="col-12">
        <h1 style="color: black" class="text-center">Create Items Category</h1>
    </div>
</div>

<div class="container">
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group text-center">
            <label asp-for="@Model.ItemCategory"></label>
            <input class="js-full-key" asp-for="@Model.ItemCategory">
            <span asp-validation-for="@Model.ItemCategory" class="text-danger"></span>
        </div>
        <select asp-for="PageCategory" class="form-control form-control-lg">
            @foreach (var item in Model.ExistingCategories)
            {
                <option>@item</option>
            }
        </select>
        @for (int i = 0; i < Model.Items.Count; i++)
        {
            <div class="form-group text-center">
                <label asp-for="@Model.Items[i].Text">Text</label>
                <input class="js-full-key" asp-for="@Model.Items[i].Text">
                <span asp-validation-for="@Model.Items[i].Text" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <label asp-for="@Model.Items[i].Href">Href</label>
                <input class="js-full-key" asp-for="@Model.Items[i].Href">
                <span asp-validation-for="@Model.Items[i].Href" class="text-danger"></span>
            </div>
        }

        <button type="submit" class="btn btn-primary">Create Items Category</button>
    </form>
</div>