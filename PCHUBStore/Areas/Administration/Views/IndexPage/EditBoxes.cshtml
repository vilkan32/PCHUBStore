@model PCHUBStore.Areas.Administration.Models.IndexPageViewModels.EditBoxViewModel

@{

    ViewData["Title"] = "Edit Boxes ";

}

<div class="container bg-warning">
    <div class="col-12">
        <h1 style="color: black" class="text-center">Edit Boxes</h1>
    </div>
</div>

<div class="container">
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        @for (int i = 0; i < Model.BoxViewModel.Count; i++)
        {
            <div class="form-group text-center">
                <label asp-for="@Model.BoxViewModel[i].Color"></label>
                <input class="js-full-key" asp-for="@Model.BoxViewModel[i].Color">
                <span asp-validation-for="@Model.BoxViewModel[i].Color" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <label asp-for="@Model.BoxViewModel[i].Text"></label>
                <input class="js-full-key" asp-for="@Model.BoxViewModel[i].Text">
                <span asp-validation-for="@Model.BoxViewModel[i].Text" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <label asp-for="@Model.BoxViewModel[i].Href"></label>
                <input class="js-full-key" asp-for="@Model.BoxViewModel[i].Href">
                <span asp-validation-for="@Model.BoxViewModel[i].Href" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <label asp-for="@Model.BoxViewModel[i].IsDeleted"></label>
                <input type="checkbox" class="js-full-key" asp-for="@Model.BoxViewModel[i].IsDeleted">
                <span asp-validation-for="@Model.BoxViewModel[i].IsDeleted" class="text-danger"></span>
            </div>
        }
        <button type="submit" class="btn btn-primary">Edit Boxes</button>
    </form>
</div>