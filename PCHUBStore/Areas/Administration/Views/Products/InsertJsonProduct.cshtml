@model PCHUBStore.Areas.Administration.Models.ProductViewModel.InsertJsonProductViewModel

@{

    ViewData["Title"] = "Inser Product As JSON ";

}

<div class="container">
    <div class="col-12">
        <h1 style="color: black" class="text-center">Inser Product As JSON</h1>
    </div>
    <div class="row">
        @if (Model.Categories.Count > 0)
        {
            <div class="col-12">
                <h1 style="color: black" class="text-center">Existing Items</h1>
            </div>
            @foreach (var item in Model.Categories)
            {

                <div class="col">
                    <p style="color: black" class="bg-danger">
                        @item
                    </p>
                </div>
            }
        }
    </div>
</div>

<div class="container">
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <select asp-for="Category" class="form-control form-control-lg">
            <option>Default</option>
            @foreach (var item in Model.Categories)
            {
                <option>@item</option>
            }
        </select>

        <div class="form-group ">
            <label asp-for="BasicCharacteristics"></label>
            <textarea style="width:50em; height: 20em" asp-for="BasicCharacteristics"></textarea>
            <span asp-validation-for="BasicCharacteristics" class="text-danger"></span>
        </div>

        <div class="form-group ">
            <label asp-for="FullCharacteristics"></label>
            <textarea style="width:50em; height: 20em" asp-for="FullCharacteristics"></textarea>
            <span asp-validation-for="FullCharacteristics" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Craft JSON Product</button>
    </form>
</div>