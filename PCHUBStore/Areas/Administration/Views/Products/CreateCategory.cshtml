@model PCHUBStore.Areas.Administration.Models.CategoryViewModels.InsertCategoryModel

@{

    ViewData["Title"] = "Create Category ";

}

<div class="container">
    <div class="col-12">
        <h1 style="color: black" class="text-center">Create Category</h1>
    </div>
    <div class="row">
        @if (Model.ExistingCategories.Count > 0)
        {
            <div class="col-12">
                <h1 style="color: black" class="text-center">Existing Items</h1>
            </div>
            @foreach (var item in Model.ExistingCategories)
            {

                <div class="col">
                    <p style="color: black" class="bg-danger">
                        @item
                    </p>
                </div>
            }
        }
    </div>
</div>

<div class="container">
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="CategoryName"></label>
            <input asp-for="CategoryName" class="form-control" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Craft Category</button>
    </form>
</div>