<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PCHUB.WEB</title>
    <link rel="icon" type="image/jpg" sizes="16x16" href="~/lightning.png">

    <link rel="stylesheet" href="~/css/site.css" />

    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
    <link href="~/css/productsStyle.css" rel="stylesheet">
</head>
<body id="page-top" style="background-color: #F2F1F0; overflow-x: hidden">

    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">


            <!-- Sidebar - Brand -->
            <li class="nav-item">
                <a style="display: inline-block" class="nav-link text-white" asp-area="Administration" asp-controller="Blacksmith" asp-action="Index">
                    <img src="~/img/FinalLogo.png" style="width: inherit; height: inherit;" alt="Alternate Text" />
                    <p class="text-center">Electronics Hub</p>
                </a>
            </li>

            <!-- Nav Item - Dashboard -->
            <li class="nav-item active">
                <a class="nav-link">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                Interface
            </div>



            <!-- Nav Item - Utilities Collapse Menu -->
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseUtilities" aria-expanded="true" aria-controls="collapseUtilities">
                    <i class="fas fa-fw fa-wrench"></i>
                    <span>Utilities</span>
                </a>
                <div id="collapseUtilities" class="collapse" aria-labelledby="headingUtilities" data-parent="#accordionSidebar">
                    <div style="font-size: 10px" class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Custom Utilities:</h6>

                        <a class="collapse-item" asp-area="Administration" asp-controller="Blacksmith" asp-action="EditUserIndexPage">Edit User Index Page</a>

                        <a class="collapse-item" asp-area="Administration" asp-controller="Blacksmith" asp-action="EditUserCategoryPage">Edit User Category Page</a>

                        <a class="collapse-item" asp-area="Administration" asp-controller="Products" asp-action="CreateCategory">Create New Category</a>

                        <a class="collapse-item" asp-area="Administration" asp-controller="Products" asp-action="CreateProduct">Create New Product For Category</a>

                        <a class="collapse-item" asp-area="Administration" asp-controller="Filters" asp-action="CreateBasicFilters">Create Basic Filters For Category</a>

                        <a class="collapse-item" asp-area="Administration" asp-controller="Filters" asp-action="CreateFilterCategory">Create New Filter Category</a>

                        <a class="collapse-item" href="">Create New Admin Account</a>

                        <a class="collapse-item" href="">Create New Worker Account</a>

                        <a class="collapse-item" asp-area="Administration" asp-controller="Products" asp-action="InsertJsonProduct">Insert Product As Json</a>


                        <a class="collapse-item" asp-area="Administration" asp-controller="Characteristics" asp-action="Create">Create Characteristics Template</a>

                        <a class="collapse-item" asp-area="Administration" asp-controller="Characteristics" asp-action="CreateCategory">Create Characteristics Category</a>

                        <a class="collapse-item" asp-area="Administration" asp-controller="Filters" asp-action="UpdateFilterCategory">Update Filters Category</a>
                    </div>
                </div>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                Addons
            </div>

            <!-- Nav Item - Pages Collapse Menu -->
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapsePages" aria-expanded="true" aria-controls="collapsePages">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>Pages</span>
                </a>
                <div id="collapsePages" class="collapse" aria-labelledby="headingPages" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Products Pages:</h6>
                        <a class="collapse-item" href="/">User Index</a>
                        <a class="collapse-item" href="/Products/Laptops">Laptops</a>
                        <a class="collapse-item" href="/Products/Monitors">Monitors</a>
                        <a class="collapse-item" href="/Products/Computers">Computers</a>
                        <a class="collapse-item" href="/Products/Mice">Mice</a>
                        <a class="collapse-item" href="/Products/Keyboards">Keyboards</a>
                        <div class="collapse-divider"></div>
                        <h6 class="collapse-header">Category Pages:</h6>
                        <a class="collapse-item" href="/Category/Keyboards">Category Keyboards</a>
                        <a class="collapse-item" href="/Category/Mice">Category Mice</a>
                        <a class="collapse-item" href="/Category/Computers">Category Computers</a>
                        <a class="collapse-item" href="/Category/Monitors">Category Monitors</a>
                        <a class="collapse-item" href="/Category/Laptops">Category Laptops</a>
                    </div>
                </div>
            </li>

            <!-- Nav Item - Tables -->
            <li class="nav-item">
                <a class="nav-link" asp-area="Support" asp-controller="ShipmentManager" asp-action="Index">
                    <i class="fas fa-shipping-fast"></i>
                    <span>Shipments</span>
                </a>
            </li>

            <!-- Nav Item - Charts -->
            <li class="nav-item active">
                <a class="nav-link" asp-area="Support" asp-controller="Charts" asp-action="Statistics">
                    <i class="fas fa-fw fa-chart-area"></i>
                    <span>Charts</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>

        </ul>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <div id="content">
                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <!-- Topbar Search -->
                    <form method="get" asp-area="" asp-controller="Products" asp-action="Search" class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                        <div class="input-group">
                            <input type="text" class="form-control bg-light border-0 small" name="searchInput" placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fas fa-search fa-sm"></i>
                                </button>
                            </div>
                        </div>
                    </form>

                    <div class="nav-item dropdown no-arrow">
                        <a class="nav-link dropdown-toggle" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span id="layoutName" class="mr-2 d-none d-lg-inline text-gray-600 small"></span>
                            <img id="layoutPicture" class="img-profile rounded-circle" src="https://dndf.business/wp-content/uploads/2014/07/765-default-avatar-530x500.png">
                        </a>
                        <!-- Dropdown - User Information -->
                        <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
                            <a class="dropdown-item" asp-action="Profile" asp-controller="Account" asp-area="Administration">
                                <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                Profile
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-action="LogOut" asp-controller="Account" asp-area="Administration">
                                <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                Logout
                            </a>
                        </div>
                    </div>
                </nav>
                @RenderBody()
            </div>
        </div>
    </div>



    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="~/vendor/chart.js/Chart.min.js"></script>
    <script src="~/js/adminLayout.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
