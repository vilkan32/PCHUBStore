@model List<PCHUBStore.View.Models.ForumViewModels.ForumPostViewModel>

@{
    this.ViewData["Title"] = "FAQ PCHUB Store";
}

<div class="container mt-5">
    <div class="container text-center">
        <h1 style="background-color: cadetblue; color: white">Frequenty Asked Questions</h1>
        <img src="~/img/FAQ-1496222256.png" style="width: 50em" class="mb-5" alt="Alternate Text" />
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Picture</th>
                <th scope="col">Title</th>
                <th scope="col">Creation Date</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                var post = Model[i];
                var index = i + 1;
                <tr>
                    <td>@index</td>
                    <td><img src="@post.PictureUrl" style="width: 64px; height: 64px" alt="Alternate Text" /></td>
                    <td><a href="/FAQ/@post.Id">@post.Title</a></td>
                    <td>@post.CreationDate</td>
                </tr>
            }          
        </tbody>
    </table>
</div>