@{
    ViewData["Title"] = "Home Page";

}

<!--Control Panel and Slider-->
<div style="padding-left: 40px; padding-right: 40px; margin-top: 40px">
    <div class="row justify-content-center">
        <div class="col-lg-3 col-sm-12" id="controlPanel">
            <!--tuka e admin panela -->
            <ul class="navbar-nav sidebar-dark accordion" style="min-height: auto; background-color: rebeccapurple;" id="accordionSidebar">

                <!-- Sidebar - Brand -->
                <a class="sidebar-brand d-flex align-items-center justify-content-center">
                    <div class="sidebar-brand-icon ">
                        <img src="Model.ControlPanel" width="25px" height="25px" alt="Alternate Text" />
                    </div>
                    <div class="mx-3">Panel</div>
                </a>

                <!-- Divider -->
                <hr class="sidebar-divider my-0">

                <!-- Nav Item -
                -->
                <hr class="sidebar-divider">

                <a class="sidebar-brand d-flex align-items-center justify-content-center" style="cursor:pointer">
                    <div class="sidebar-brand-icon">
                        <img src="~/img/list.png" width="25px" height="25px" alt="Alternate Text" />
                    </div>
                    <div class="mx-3">Категории</div>
                </a>
                <!-- Divider -->
                <hr class="sidebar-divider">

                <!-- Heading -->
                <div class="sidebar-heading">
                    Options
                </div>

                <!-- Nav Item - Pages Collapse Menu -->
                <li class="nav-item">
                    <a class="nav-link collapsed" style="cursor: pointer">
                        <i class="fas fa-fw fa-cog"></i>
                        <span>Лаптопи</span>
                    </a>

                </li>

                <!-- Nav Item - Utilities Collapse Menu -->
                <li class="nav-item">
                    <a class="nav-link collapsed" style="cursor: pointer">
                        <i class="fas fa-fw fa-cog"></i>
                        <span>Мишки</span>
                    </a>

                </li>

                <li class="nav-item">
                    <a class="nav-link collapsed" style="cursor: pointer">
                        <i class="fas fa-fw fa-cog"></i>
                        <span>Клавиатури</span>
                    </a>

                </li>

            </ul>
        </div>


        <div class="col-lg-9 col-sm-12" id="optionsOrSliderParent">
            <!--tuka e slidera ili opciite koito shte budat postaveni -->
            <div class="row align-items-center" id="optionsOrSlider">
                <div class="col-12 text-center align-items-center" style="display: inherit">
                    <img src="Model.LeftArrow" style="width: 60px; height: 60px; position: absolute; cursor:pointer; display:none" alt="Alternate Text" id="leftArrow" />
                    <img src="" style="width: 100%; min-height: 500px" alt="Alternate Text" id="mainSlidePic" />
                    <img src="Model.RightArrow" style="width: 60px; height: 60px; position: relative; right: 60px; cursor:pointer; display: none" alt="Alternate Text" id="rightArrow" />
                </div>
            </div>
        </div>
    </div>
</div>

