@model PCHUBStore.View.Models.ProductsViewModel

@{
    ViewData["Title"] = Model.Category;

}

<div class="row" style="margin-left: 50px; margin-right:50px; margin-top: 75px">
    <div class="col-2"></div>
    <div class="col-4">
        <h1 style="color: black">
            @Model.Category Category
        </h1>
    </div>
    <div class="col-6"></div>

    <div class="col-2"></div>
    <div class="col-10">
        <p style="color: black">
            Here you can review all of the @Model.Category that are available on our website. By applying the filters you would be able to select the best choice for you. We combine both quality and low prices.
        </p>
    </div>
</div>

<div class="container" style="margin-left: 2em; margin-right:2em">
    <partial name="~/Views/Partial/Pagination.cshtml" model="Model" />
</div>

<div style="margin-left: 2em; margin-right:2em" class="row">
    <div class="col-sm-12 col-md-12 col-lg-2">
        <partial name="~/Views/Partial/Products/ProductFiltersPartial.cshtml" model="Model" />
    </div>
    <div class="col-sm-12 col-md-12 col-lg-10">
        <partial name="~/Views/Partial/Products/ProductsPartial.cshtml" model="Model.Products" />
    </div>
</div>



@section Scripts {
    <script type="text/javascript" src="~/js/laptopsPage.js"></script>
}
